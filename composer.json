{
  "name": "multi-menu/app",
  "description": "Aplicação de gerenciamento de cardápios com arquitetura em camadas",
  "type": "project",
  "require": {
    "php": "^8.1",
    "vlucas/phpdotenv": "^5.5",
    "monolog/monolog": "^3.7",
    "respect/validation": "^2.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.10",
    "friendsofphp/php-cs-fixer": "^3.65",
    "nunomaduro/phpinsights": "^2.8",
    "phpstan/phpstan-strict-rules": "^1.6"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "files": [
      "app/Support/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "lint": [
      "php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes --dry-run --diff"
    ],
    "format": [
      "php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    ],
    "analyse": [
      "phpstan analyse --memory-limit=512M"
    ],
    "test": [
      "phpunit"
    ],
    "quality": [
      "@lint",
      "@analyse",
      "@test"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
